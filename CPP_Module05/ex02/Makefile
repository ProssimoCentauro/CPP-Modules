NAME = Bureaucrat

SRCSF = ./srcs/
INCLUDESF = ./includes
SRCS = $(SRCSF)Bureaucrat.cpp $(SRCSF)AForm.cpp $(SRCSF)ShrubberyCreationForm.cpp $(SRCSF)RobotomyRequestForm.cpp $(SRCSF)PresidentialPardonForm.cpp $(SRCSF)main.cpp

OBJS = $(SRCS:.cpp=.o)

CC = c++
CPPFLAGS = -Wall -Wextra -Werror -std=c++98 -g
IFLAGS = -I $(INCLUDESF)
RM = rm -f

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CPPFLAGS) $(IFLAGS) -o $(NAME) $(OBJS) 

%.o: %.cpp
	$(CC) $(CPPFLAGS) $(IFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
